<div id="home">
  <div class="toolbar">
    <h1>Home</h1>
  </div>
  <ul>
    <li class="arrow"><a href="#osmap_pane">OS map</a></li>
    <li class="arrow"><a href="#open_streetmap_pane">Open Streetmap</a></li>
    <li class="arrow"><a href="#open_cyclemap_pane">Open Cyclemap</a></li>
  </ul>
  <div class="free_floating"><a href="#" onclick="update_location();" class="whiteButton">Update location</a></div>
  <div class="free_floating">
    <%= image_tag 'loading.gif', :id => 'update_location_image' %>
  </div>
  <ul>
    <li class="arrow"><a href="#search_pane">Search</a></li>
  </ul>
</div>
<div id="osmap_pane">
  <div class="toolbar">
    <h1>OS</h1><a class="back" href="#">Back</a>
  </div>
  <div class="info"></div>
  <div id="osmap"></div>
</div>
<div id="open_streetmap_pane">
  <div class="toolbar">
    <h1>Open Street</h1><a class="back" href="#">Back</a>
  </div>
  <div class="info"></div>
  <div id="open_streetmap"></div>
</div>
<div id="open_cyclemap_pane">
  <div class="toolbar">
    <h1>Open Cycle</h1><a class="back" href="#">Back</a>
  </div>
  <div class="info"></div>
  <div id="open_cyclemap"></div>
</div>
<div id="search_pane">
  <div class="toolbar">
    <h1>Search</h1><a class="back" href="#">Back</a>
  </div>
  <div class="info"></div>
    <ul>
      <li><input type="text" name="postcode" placeholder="Postcode" id="postcode" /></li>
    </ul>
    <div class="free_floating"><a href="#" class ="whiteButton" onclick="searchPostcode($('#postcode').val());return false;">Search for postcode</a></div>
    <ul>
      <li><input type="text" name="place" placeholder="Place/Town/Address" id="place" /></li>
    </ul>
    <div class="free_floating"><a href="#" class ="whiteButton" onclick="searchPlace($('#place').val());return false;">Search for place</a></div>
    <ul id="search_results">
    </ul>

</div>